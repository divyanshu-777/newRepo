
@{
    Layout = null;
}




<head>
    <title>Web Page Design</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width" ,
          initial-scale="1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

</head>

<style>
    * {
        color: white;
    }

    .bg {
        background: url('https://cdn.static-zoutons.com/images/originals/blog/DOMINOS_FREECHARGE_OFFER_BLOG_BANNER3_1578642317.jpg') no-repeat;
        width: 100%;
        height: 100vh;
        background-size: cover;
    }

    .bor {
        border: 0px solid;
        padding: 50px 60px;
        margin-top: 30vh;
        box-shadow: -1px 4px 26px 11px rgba(0,0,0,0.75);
    }

    #exampleInputPassword1, #exampleInputEmail1, .checkbox {
        margin-left: 25px;
    }

    .btn-success {
        margin-left: 80px;
        width: 100px;
    }

    .btn-primary {
        width: 96px;
    }
</style>

<body>
    <div class="container-fluid bg" style=" background-color black;">
        <div class="row">
            <div class="col-md-4 col-sm-4 col-xs-12"></div>
            <div class="col-md-4 col-sm-4 col-xs-12">

                <form class="bor">
                    @*<h1 class="text-center"> LOGIN FORM </h1>*@
                    <div class="form-group">
                        <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Username">
                    </div>
                    <div class="form-group text-center">
                        <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
                    </div>
                    <div class="checkbox">
                        <label>
                            <input type="checkbox"> Remember me
                        </label>
                    </div>
                    <button type="submit" class="btn btn-success btn-group-lg">Login</button> <b>OR</b><button type="submit" class="btn btn-primary btn-group-lg ">Sign Up</button>
                </form>
            </div>
            <div class="col-md-4 col-sm-4 col-xs-12"></div>
        </div>
    </div>
</body>
